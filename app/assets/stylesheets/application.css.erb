@import url(http://fonts.googleapis.com/css?family=Cabin:400,500,600,400italic,500italic,600italic);
@import url(http://fonts.googleapis.com/css?family=Arapey:400italic,400);

body {
  background: white;
  font-family: 'Cabin', sans-serif;
}

header {
  font-family: 'Arapey', serif;
  font-weight: '400';
  font-style: italic;
  font-size: 40pt;
  background: black;
  color: white;
  height: 44px;
  width: 100%;
  position: fixed;
  z-index: 11;
  top: 0;
  left: 0;
  line-height:15px;
}

a {
  text-decoration: none;
  text-transform: none;
  color: inherit;
}

a:hover {
  color: inherit;
  text-decoration: none;
}

h1 {
	margin-top:19px;
	margin-left: 10px;
}

h1, h4 {
  font-style: italic;
}

#modal-post-container h4 {
  padding: 10px 0 4px;
  font-size: 16pt;
  font-weight: '600';
}

#modal-post-container h5 {
  font-weight: '600';
  font-size: 13pt;
  color: lightpink;
}

#modal-post-container {
  display: none;
  position: fixed;
  top: 8%;
  left: 30%;
  right: 30%;
  z-index: 12;
  background: yellow;
  width: 500px;
  min-height: 800px;
  height: 70%;
  padding: 10px 40px 10px 10px;
  overflow: scroll;
}

#modal-post-container img{
  z-index: 12;
  background: yellow;
  width: 500px;
}

button {
	border-style: none;
	background: none;
	border: 1px solid black;
	border-radius: 3px;
	padding-top: 5px;
	-o-border-radius: 3px;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	margin: 2px;
	cursor: pointer;
  font-size: 10pt;
	transition-property: background, color;
  transition-duration: .2s;
  transition-timing-function: linear;
}

button:hover {
	background: black;
	color: white;
}

div#posts-container {
  padding-top: 40px;
  padding-left: 0 !important;
  padding-right: 0 !important;
}

div#modal {
  position: fixed;
  z-index: 10;
  background: rgba(0,0,0,.8);
  width: 40%;
  display: none;
  color: whitesmoke;
  top:20%;
  left:30%;
  text-align: right;
  padding: 40px;
}

div#modal input {
  margin: 5px;
  padding: 5px;
}

div#modal label {
  margin: 5px;
  padding: 5px;
}

div#modal button {
	/*margin: 5px;
  padding: 5px;*/
}

span#close {
  position: absolute;
  top: 0px;
  right: 0px;
  color: white;
  background: black;
  font-size: 30px;
  padding: 2px 10px;
  cursor: pointer;
}


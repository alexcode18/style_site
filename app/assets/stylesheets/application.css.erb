@import url(http://fonts.googleapis.com/css?family=Cabin:400,500,600,400italic,500italic,600italic);
@import url(http://fonts.googleapis.com/css?family=Arapey:400italic,400);

body {
  background: white;
  font-family: 'Cabin', sans-serif;
}

header {
  font-family: 'Arapey', serif;
  font-weight: '400';
  font-style: italic;
  font-size: 40pt;
  background: black;
  color: white;
  height: 44px;
  width: 100%;
  /*padding: 20px 10px 0px;*/
  position: fixed;
  z-index: 11;
  top: 0;
  left: 0;
  line-height:15px;
}

h1 {
	margin-top:19px;
	margin-left: 10px;
}

button {
	border-style: none;
	background: white;
	border: 1px solid black;
	border-radius: 3px;
	padding-top: 5px;
	-o-border-radius: 3px;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	margin: 5px;
	cursor: pointer;
	transition-property: background, color;
  transition-duration: .2s;
  transition-timing-function: linear;
}

button:hover {
	background: black;
	color: white;
}

div#posts-container {
  float:left;
  width: 83%;
  position: relative;
  top: 70px;
  bottom: 30px;
  margin-bottom: 10px;
}
div#modal {
  position: fixed;
  z-index: 10;
  background: rgba(0,0,0,.8);
  height: 300px;
  width: 40%;
  /*padding: 100px 15%;*/
  display: none;
  color: whitesmoke;
  top:20%;
  left:30%;
  text-align: right;
  padding: 40px;
}

div#modal input {
  margin: 5px;
  padding: 5px;
}

div#modal label {
  margin: 5px;
  padding: 5px;
}

div#modal button {
	margin: 5px;
  padding: 5px;
}

span#close {
  position: absolute;
  top: 0px;
  right: 0px;
  color: white;
  background: black;
  font-size: 30px;
  padding: 2px 10px;
  cursor: pointer;
}

div.card {
  width: 250px;
  height: 330px;
  overflow: hidden;
  float: left;
  margin: 5px;
  border: 1px solid rgba(0,0,0,0.1);
  border-radius: 4px;
  box-shadow:
    inset 0 1px 0 rgba(255,255,255,0.5),
    0 2px 2px rgba(0,0,0,0.3),
    0 0 4px 1px rgba(0,0,0,0.2);
  background: white;
}

.card a {
  float: right;
}

h4.title {
  font-size: 20px;
  /*font-weight: 300;*/
  text-align: center;
}

span {
  font-size: 14px;
  /*font-weight: 100;*/
  float: right;
}

div.image {
  padding: 5px 5px;
}

.image img {
  width: 240px;
}

p.content {
  margin: 0 auto;
  font-size: 12px;
  font-weight: 400;
  width: 190px;
  text-align: justify;
}

#footer {
  cursor: pointer;
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 20px;
  padding: 10px;
  text-align: center;
  border-top: 1px solid black;
  background: rgba(250,250,250,.8);
}

#forms-container {
  width: 17%;
  min-width: 198.4px;
  position:fixed;
  right: 20px;
  top: 80px;
  padding: 10px;
  border: 1px solid black;
  margin-bottom: 10px;
  background: rgba(250,250,250,.8);
}

#forms-container input {
  position:absolute;
  right: 10px;
  max-width: 45%;
}

.hover_box {
  position: relative;
  top: 0px;
  padding: 5px 10px 20px;
  left: 0;
  background: white;
  color: black;
  opacity: .8;
}

#card-update {
  height: 48%;
  width: 100%;
  text-align: center;
}
#card-update input {
  width: 300px;
  height: 35px;
}
#card-update div {
  width: 300px;
  height: 25%;
  margin: 0 auto;
}